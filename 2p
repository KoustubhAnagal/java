import java.util.*;
public class Shapes
{
public static void main(String args[]);
{
Scanner sc= new Scanner(System.in);
System.out.println("enter the length and breadth");
int l= sc.nextInt();
int b= sc.nextInt();
int p= 2*(l+b), a=l*b;
System.out.println("the perimeter is"+p);
System.out.println("the area is"+a);
}
}
